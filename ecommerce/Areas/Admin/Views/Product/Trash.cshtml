@model IEnumerable<ecommerce.Context.Product>
@{
    ViewBag.Title = "Trash";
}


<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <h2 class="page__title">Thùng rác sản phẩm</h2>
                    <hr />
                    <div class="card">
                        <table class="table table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Avartar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CategoryId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ShortDes)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PriceDiscount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TypeId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Slug)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.BrandId)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        <img style="width: 50px" class="product__image" src="~/Content/images/items/@Html.DisplayFor(modelItem => item.Avartar)" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ShortDes)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PriceDiscount)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TypeId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Slug)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BrandId)
                                    </td>
                                    <td>
                                        <button class="btn btn-warning" style="width: 50px;">
                                            <a href=" @Url.Action("ReTrash", new { id = item.Id })" style="color: #fff;"><i class="fas fa-trash-restore"></i></a>
                                        </button>
                                        <button class="btn btn-danger" style="width: 50px;">
                                            <a href=" @Url.Action("Delete", new { id = item.Id })" style="color: #fff;"><i class="fas fa-trash"></i></a>
                                        </button>
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

